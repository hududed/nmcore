{
	"name": "nmcore-landing",
	"version": "0.3.1",
	"private": true,
	"scripts": {
		"copy:prerendered": "copyfiles -u 5 functions/build/prerendered/status/checkout/** functions/build/client/status/checkout/",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"seed": "tsx src/seed.ts",
		"build:all": "cross-env NODE_ENV=$NODE_ENV vite build && cd functions && npm run build:functions && cd ..",
		"emulate": "cross-env NODE_ENV=development FIRESTORE_EMULATOR_HOST=localhost:8080 npm run build:all && npm run copy:prerendered && firebase emulators:start",
		"deploy:staging": "cross-env NODE_ENV=staging npm run build:all && npm run copy:prerendered && firebase use nanogrowtech-staging && firebase deploy",
		"deploy:production": "cross-env NODE_ENV=production npm run build:all && npm run copy:prerendered  && firebase use nanogrowtech-609bc && firebase deploy",
		"release": "standard-version"
	},
	"devDependencies": {
		"@babel/cli": "^7.26.4",
		"@babel/core": "^7.26.0",
		"@babel/plugin-transform-modules-commonjs": "^7.26.3",
		"@babel/preset-env": "^7.26.0",
		"@babel/preset-react": "^7.26.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/typography": "^0.5.14",
		"@types/react": "^18.3.12",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.0.0-next.65",
		"clsx": "^2.1.1",
		"copyfiles": "^2.4.1",
		"cross-env": "^7.0.3",
		"daisyui": "^4.12.13",
		"embla-carousel-svelte": "^8.5.1",
		"formsnap": "^2.0.0-next.1",
		"lucide-svelte": "^0.453.0",
		"mode-watcher": "^0.4.1",
		"phosphor-svelte": "^3.0.0",
		"postcss": "^8.4.47",
		"standard-version": "^9.5.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.21.0",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vite": "^5.4.11",
		"zod": "^3.23.8"
	},
	"type": "module",
	"dependencies": {
		"@easypost/api": "^7.5.3",
		"@google-cloud/functions-framework": "^3.4.2",
		"@react-email/components": "0.0.25",
		"@sendgrid/mail": "^8.1.4",
		"@stripe/stripe-js": "^5.2.0",
		"@sveltejs/adapter-node": "^5.2.9",
		"@types/node": "^22.10.2",
		"cloudinary": "^2.5.1",
		"dotenv": "^16.4.7",
		"esm": "^3.2.25",
		"firebase": "^10.14.1",
		"firebase-admin": "^12.7.0",
		"firebase-functions": "^6.1.2",
		"nanoid": "^5.0.9",
		"next": "^15.0.1",
		"stripe": "^17.5.0",
		"svelte-cloudinary": "^2.3.0"
	}
}